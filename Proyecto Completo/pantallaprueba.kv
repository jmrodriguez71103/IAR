			hint_text: "Declinacion"
			size_hint: None, None
			width: 200
			font_size: 16
			pos_hint: {"center_x": .75, "center_y": .25}

		MDRectangleFlatButton:
			id: save
			text: "Enviar datos"
			width: 200
			height: 100
			pos_hint: {"center_x": .75, "center_y": .20}
