import json

with open('data.json') as file:
    data = json.load(file)

print('Posicion actual: ', data)

def nuevaPos(motor):
  valueX = int(input(f"Ingrese la nueva posicion x del {motor} : "))
  valueY = int(input(f"Ingrese la nueva posicion y del {motor} : "))
  data[motor]['x'] = valueX
  data[motor]['y'] = valueY
  print (data)

nuevaPos("Motor2")

with open('data.json', 'w') as file:
    json.dump(data, file)
