	MDCard:
		size_hint: 0.506, 1
		pos_hint: {"center_x": 0.75, "center_y": 0.5}
		padding: 15
		spacing: 25
		orientation: 'vertical'
		md_bg_color: 0.18, 0.23, 0.59, 0.9 

		
		
		MDTextField:
			id: grados
			hint_text: "Grados"
			text_color:"White"
			size_hint: None, None
			width: 200
			font_size: 16
			pos_hint: {"center_x": 0.5}
		MDLabel:
			text: ""
			
			
			
		MDLabel:
			id: estado
			text: "Estado"
			font_size: 40
			halign: 'center'
			size_hint_y: None
			padding_y: 10

		
		MDTextField:
			id: pos_x
			text: app.text_x
			hint_text: "Ascension recta"
			size_hint: None, None
			width: 200
			font_size: 16
			pos_hint: {"center_x": 0.5}

	
	
		MDTextField:
			id: pos_y
			text: app.text_y
			hint_text: "Declinacion"
			size_hint: None, None
			width: 200
			font_size: 16
			pos_hint: {"center_x": 0.5}

			
		MDLabel:
			id: actualizarm
			text: "Actualizar Manualmente"
			font_size: 40
			halign: 'center'
			size_hint_y: None
			padding_y: 10

			
		MDTextField:
			id: cambio_x
			text: pos_x.text
			hint_text: "Ascension recta"
			size_hint: None, None
			width: 200
			font_size: 16
			pos_hint: {"center_x": 0.5}

	

		MDTextField:
			id: cambio_y
			text: pos_y.text
			hint_text: "Declinacion"
			size_hint: None, None
			width: 200
			font_size: 16
			pos_hint: {"center_x": 0.5}

